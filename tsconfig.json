{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        "lib": ["ES2021"],
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "removeComments": true,
        
        // Enable Typo Checks 
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
    
        "outDir": "dist"
    },
    "compileOnSave": true,
    "skipLibCheck": true,
    "include": ["src/**/*"]
}